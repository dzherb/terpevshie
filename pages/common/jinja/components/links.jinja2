{% macro html(links) %}
  <div id="links-container">
    {% for link in links %}
      <a target="_blank" href="{{ link.src }}">{{ link.title }}</a>
    {% endfor %}
  </div>
{% endmacro %}

<style>
  {% macro styles() %}
    #links-container {
      width: 100%;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-evenly;
      align-items: center;
      gap: 1.5rem;
    }

    #links-container a {
      color: inherit;
      text-decoration: none;
      transition: transform 0.3s ease;
      transform-origin: center center;
    }

    #links-container a:hover {
      transform: scale(1.03);
    }

    #links-container a:visited {
      color: inherit;
    }
  {% endmacro %}
</style>