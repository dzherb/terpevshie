{% extends './base.jinja2' %}

{% block head %}
  <meta property="og:title" content="{{ og_title if og_title else 'потерпевшие'}}">
  <meta property="og:description" content="{{ og_description if og_description else 'музыка из другого мира'}}">
  <meta property="og:image" content="https://terpevshie.ru/home/logo.png">
  <meta property="og:url" content="https://terpevshie.ru">
  <meta property="og:type" content="website">
  {% include '../includes/font_old_standard.html' %}
  {% include '../includes/favicon_tags.html' %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.fog.min.js"></script>
{% endblock %}

{% set telegram_link = 'https://t.me/terpevshie' %}
{% set sm_breakpoint = 600 %}

{# Components #}
{% import '../components/navbar.jinja2' as navbar %}

{% block content %}
  {% if not exclude_navbar %}
    {{ navbar.html() }}
  {% endif %}

  <main class="main-container font-regular">
    {% block main %}{% endblock %}
  </main>
{% endblock %}

{% block script %}
  <script>
    VANTA.FOG({
      el: "body",
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      highlightColor: 0x0,
      midtoneColor: 0xb1b1b1,
      lowlightColor: 0x9d9d9d,
      baseColor: 0x414141,
      blurFactor: 0.48,
      speed: 0.00,
      zoom: 1.80
    })
  </script>
{% endblock %}

{% block style %}
  <style>
    {% include '../includes/simple_reset.css' %}
    {% include '../includes/view_transition.css' %}

    {% if not exclude_navbar %}
      {{ navbar.styles() }}
    {% endif %}

    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      background-color: #1e1e1e;
      color: #ffffff;
    }

    .font-regular {
      font-family: "Old Standard TT", serif;
      font-weight: 400;
      font-style: normal;
    }

    .main-container {
      flex-grow: 1;
      padding: 3rem 3rem 6rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      font-size: 1.2rem;
    }

    .main-container a {
      color: inherit;
      text-decoration: none;
      transition: color 150ms;
    }

    .main-container a:hover {
      color: #121212;
    }

    h1 {
      margin-bottom: 2rem;
    }

    h1, h2, h3 {
      font-size: 2rem;
      font-weight: normal;
    }

    @media screen and (max-width: {{ sm_breakpoint }}px) {
      .main-container {
        padding-bottom: 8rem;
      }
    }

    {% block extra_styles %}{% endblock %}
  </style>
{% endblock %}