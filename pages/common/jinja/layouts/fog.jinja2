{% extends './base.jinja2' %}

{% block head %}
  <meta property="og:title" content="потерпевшие">
  <meta property="og:description" content="музыка из другого мира">
  <meta property="og:image" content="https://terpevshie.ru/home/logo.png">
  <meta property="og:url" content="https://terpevshie.ru">
  <meta property="og:type" content="website">
  {% include '../includes/font_old_standard.html' %}
  {% include '../includes/favicon_tags.html' %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.fog.min.js"></script>
{% endblock %}

{% block content %}
  <main class="main-container old-standard-tt-regular">
    {% block main %}{% endblock %}
  </main>
{% endblock %}

{% block script %}
  <script>
    VANTA.FOG({
      el: "body",
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      highlightColor: 0x0,
      midtoneColor: 0xb1b1b1,
      lowlightColor: 0x9d9d9d,
      baseColor: 0x414141,
      blurFactor: 0.48,
      speed: 0.00,
      zoom: 1.80
    })
  </script>
{% endblock %}

{% block style %}
  <style>
    {% include '../includes/view_transition.css' %}

    body {
      padding: 0;
      margin: 0;
      background-color: #1e1e1e;
      color: #ffffff;
    }

    .old-standard-tt-regular {
      font-family: "Old Standard TT", serif;
      font-weight: 400;
      font-style: normal;
    }

    .main-container {
      min-height: 100vh;
      padding: 0 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 0.25rem;
    }

    .main-container a {
      color: white;
      text-decoration: none;
      transition: color 150ms;
    }

    .main-container h1 {
      font-weight: normal;
    }

    .main-container a:hover {
      color: #121212;
    }

    {% block extra_styles %}{% endblock %}
  </style>
{% endblock %}